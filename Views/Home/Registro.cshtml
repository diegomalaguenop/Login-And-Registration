@model LoginAndRegistration.Models.Usuario
 
<div class="col-md-6">
<form method="POST" asp-controller="Usuario" asp-action="ProcesaRegistro" class="my-4 p-3 bg-light rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2 class="text-center">Registro</h2>
            <div class="form-group">
            <label asp-for="Nombre">Nombre del usuario:</label>
            <input type="text" asp-for="Nombre" class="form-control" required minlength="2" >
            <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Apellido">Apellido del usuario:</label>
                <input type="text" asp-for="Apellido" class="form-control" required  minlength="2">
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email del usuario:</label>
                <input type="email" asp-for="Email" class="form-control" required minlength="8">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
                <div class="form-group">
                <label asp-for="Password">Password del usuario:</label>
                <input type="password" asp-for="Password" class="form-control" required minlength="8" >
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm">Confirmar Password:</label>
                <input type="password" asp-for="PasswordConfirm" class="form-control" required minlength="8">
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <br>
            <button  class="btn btn-primary btn-block">
                Registro
            </button>
        </form>
    </div>